{
  "name": "bvault-js",
  "version": "0.0.1",
  "type": "module",
  "description": "A frontend cryptographic library for encrypting and decrypting data in the browser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "ci": "npm run build && npm run check-format && npm run test:run"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.0.15",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "browser": {
    "crypto": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kurtiz/brow-vault-js.git"
  },
  "keywords": [
    "crypto",
    "encrypt",
    "decrypt",
    "frontend",
    "secure"
  ],
  "author": {
