{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodeNext",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "src/pkg"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}